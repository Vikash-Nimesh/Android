<?xml version="1.0" encoding="utf-8"?>
<layout>
    
    <data>
        <variable
            name="clickHandler"
            type="com.example.contactsmanager2.AddNewConctactActivity.AddNewContactClickHandler" />
        
        <variable
            name="contact"
            type="com.example.contactsmanager2.Contact" />
        
        
        
    </data>
    
    
    
    
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddNewConctactActivity">


    <EditText
        android:id="@+id/nameEditBox"
        android:layout_width="0dp"
        android:hint="Enter name"
        android:text="@{contact.name}"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/> 
        
    <EditText
        android:id="@+id/emailEditBox"
        android:layout_marginTop="24dp"
        android:layout_width="0dp"
        android:hint="Enter email"
        android:text="@{contact.email}"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameEditBox"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:layout_marginTop="48dp"

        android:onClick="@{clickHandler::onSubmitClick}"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailEditBox" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>